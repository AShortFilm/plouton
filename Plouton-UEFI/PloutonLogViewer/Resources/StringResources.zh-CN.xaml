<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <!-- Common UI -->
    <system:String x:Key="WindowTitle">Plouton 日志查看器</system:String>
    <system:String x:Key="Header">Plouton 日志查看器</system:String>
    <system:String x:Key="LogAddressLabel">日志缓冲区物理地址:</system:String>
    <system:String x:Key="GetAddressButton">获取地址</system:String>
    <system:String x:Key="StatusLabel">状态:</system:String>
    <system:String x:Key="StartButton">开始</system:String>
    <system:String x:Key="PauseButton">暂停</system:String>
    <system:String x:Key="ClearButton">清空</system:String>
    <system:String x:Key="LanguageLabel">语言:</system:String>

    <!-- Status Messages -->
    <system:String x:Key="StatusNotStarted">未开始。</system:String>
    <system:String x:Key="StatusAddressInvalid">地址不是有效的64位十六进制值。</system:String>
    <system:String x:Key="StatusGettingAddress">正在获取地址...</system:String>
    <system:String x:Key="StatusAddressSuccess">成功获取地址: </system:String>
    <system:String x:Key="StatusAddressFailed">获取地址失败，WinRing0 驱动未找到或加载失败。</system:String>
    <system:String x:Key="StatusMemoryReadFailed">读取内存失败</system:String>
    <system:String x:Key="StatusMonitoring">监控中...</system:String>
    <system:String x:Key="StatusPaused">已暂停。</system:String>
    <system:String x:Key="StatusCopyFailed">复制到剪贴板失败</system:String>
    <system:String x:Key="StatusPrivilegeFailed">获取 SeSystemEnvironmentPrivilege 权限失败。请以管理员身份运行。</system:String>
    <system:String x:Key="StatusUefiVarNotFound">未找到 UEFI 变量 'PloutonLogAddress'。驱动是否正在运行？</system:String>
    <system:String x:Key="StatusUefiError">UEFI 变量错误 ({0}): {1}</system:String>
    <system:String x:Key="StatusUefiVarSizeError">UEFI 变量大小不匹配。预期大小 {1}，实际大小 {0}。</system:String>
    <system:String x:Key="StatusDriverError">驱动错误</system:String>
    <system:String x:Key="StatusReaderNotInitialized">读写器未初始化。请输入有效地址并开始。</system:String>
    <system:String x:Key="StatusReading">正在读取日志...</system:String>
    <system:String x:Key="StatusAddressCopied">获取地址的脚本已复制到剪贴板。</system:String>
    <system:String x:Key="StatusAddressFail">获取地址失败。详见状态信息。</system:String>

    <!-- New button -->
    <system:String x:Key="CopyButton">复制</system:String>
    <system:String x:Key="CopyButtonText">全部复制</system:String>
    <system:String x:Key="SaveButtonText">另存为...</system:String>
    <system:String x:Key="SaveLogTitle">日志另存为</system:String>
    <system:String x:Key="StatusLogsCopied">全部日志已复制到剪贴板。</system:String>
    <system:String x:Key="StatusLogSaved">日志已保存至 {0}。</system:String>
    <system:String x:Key="StatusSaveFailed">保存日志文件失败</system:String>

</ResourceDictionary> 